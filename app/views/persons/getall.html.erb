<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Email</th>
      <th><%= t :firstname %></th>
      <th><%= t :lastname %></th>
      <th>DateReg</th>
      <th>Counts of bookings</th>
      <th><%= t :discount %></th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% if @peoples.size == 0 %>
      <tr>
        <td colspan="6">No people found.</td>
      </tr>
    <% else %>
      <% @peoples.each do |person| %>
        <tr>
          <td><%= link_to person.email, persons_show_path(person: person.id) %></td>
          <td><%= person.firstname %></td>
          <td><%= person.lastname%></td>
          <td><%= person.created_at%></td>
          <td><%= Booking.where(user_id: person.id).count%></td>
          <td><%= person.discount %></td>
          <td><%= person.description %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>