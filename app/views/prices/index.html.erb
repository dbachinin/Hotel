<p id="notice"><%= notice %></p>

<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.price %></td>
        <td><%= price.description %></td>
        <td><%= link_to 'Show', ([@hotel,@rooms,@price]) %></td>
        <td><%= link_to 'Edit', edit_hotel_room_price_path(:id => price.id) %></td>
        <td><%= link_to 'Destroy', ([@hotel,@rooms,price]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

