<p id="notice"><%= notice %></p>

<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
      <% price.taryph.each {|i| @index = i.index if Date.parse(i.udate.to_s) < Date.today and Date.parse(i.edate.to_s) < Date.today} %>
        <td><%= price.price+@index %></td>
        <td><%= price.description %></td>
        <td><%= link_to 'Show', price_path(:id => price.id) %></td>
        <td><%= link_to 'Edit', edit_price_path(:id => price.id) %></td>
        <td><%= link_to 'Destroy', (price), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

