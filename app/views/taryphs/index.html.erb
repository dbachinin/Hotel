<h1>Taryphs</h1>
<%= t :price %>
<%= Room.find(@price.room_id).name%>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Udate</th>
      <th>Edate</th>
      <th>Index</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taryphs.each do |taryph| %>
      <tr>
        <td><%= taryph.udate %></td>
        <td><%= taryph.edate %></td>
        <td><%= taryph.index %></td>
        <td><%= link_to 'Show', taryph,class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_taryph_path(taryph), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', taryph, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Taryph', new_price_taryph_path %>
<%= link_to 'Back', price_path(Price.find(params[:price_id]).id) %>