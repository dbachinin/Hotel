<p>
  <strong>Дата заезда</strong>
  <%= I18n.l Date.parse(@booking.check_in.to_s), format: :short %>
</p>

<p>
  <strong>Дата отъезда:</strong>
  <%= I18n.l Date.parse(@booking.check_out.to_s), format: :short %>
</p>

<p>
  <strong>Hotel:</strong>
  <%= Hotel.find(@booking.hotel_id).name %>
</p>

<p>
  <strong>Room:</strong>
  <%= Room.find(@booking.room_id).name %>
</p>

<p>
  <strong>SubTotal:</strong>
  <%= @booking.subtotal %>
</p>

<%= link_to 'Edit', edit_booking_path(@booking) %> |
<%= link_to 'Back', bookings_path(params[:room_id] = @booking.room_id) %>
<%= link_to 'Delete', @booking, method: :delete, data: { confirm: 'Are you sure?' } %>
